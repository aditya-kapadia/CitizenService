<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundForLayout">
<!--
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="Here will be the List of Existing potholes from Database"/>-->

    <ListView
        android:id="@+id/potholeList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/got_pothole"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"></ListView>



    <Button
        android:id="@+id/got_pothole"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="Got a new Issue  ?"
        android:background="@drawable/button_rounded"
        android:textColor="@color/textColorButton"/>

    <TextView
        android:id="@+id/emptyElement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_vertical"
        android:text="NO Potholes Issues Reported!"
        android:textColor="#000000"
        android:textSize="20.0sp"
        android:visibility="gone" />

</RelativeLayout>